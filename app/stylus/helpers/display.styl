borderbox-all()
  *
    box-sizing border-box

table(table-layout-auto = false)
  display table
  table-layout fixed
  width 100%
  if table-layout-auto
    table-layout auto

table-cell(vertical-align-middle = false)
  display table-cell
  vertical-align top
  if vertical-align-middle
    vertical-align middle

pxtoem(pixels)
  pixels / 16 em

pxtorem(pixels)
  pixels / 16 rem

square(pixels)
  width pixels
  height pixels

clearfix()
  &:after
    display table
    clear both
    content ""

flex-ie-height-fix()
  display flex
  flex-direction column
