.geographical
  height 680px

  &__wrap
    display flex
    height 600px

  &__content
    flex 1 0
    padding-right 20px
    align-self center

  &__pic
    flex 1 0
    background url(../img/geographical.png) center center no-repeat

  &__name
    margin-bottom 5px
    font-size 30px
    $font500()

  &__city
    padding-bottom 15px
    color #ffc70a
    font-size 20px
    $font300()

  &__text
    margin-bottom 30px
    font-size 20px
    line-height 30px
