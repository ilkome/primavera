.loader
  z-index 100
  position fixed
  left 0
  top 0
  width 100%
  height 100%
  background #fff

  &__spinner
    position fixed
    left 45%
    top 45%
    width 100px
    height 100px
    border 3px solid transparent
    border-top 3px solid #f05738
    border-radius 50%
    animation spinner 1.5s infinite linear

  &__image
    position fixed
    left 45%
    top 45%
    margin 20px 0 0 20px
    width 63px
    height 63px
    background url(../img/logo-spinner.png) 0 0 no-repeat

@keyframes spinner
  0
    transform rotate()
  20%
    border-top-color #8b71b8
  40%
    border-top-color #417cbe
  60%
    border-top-color #36b65a
  80%
    border-top-color #ffc80b
  100%
    border-top-color #f05738
    transform rotate(360deg)
